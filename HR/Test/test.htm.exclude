<script>
    function line(x1, y1, x2, y2, color) {
        var tmp
        if (x1 >= x2) {
            tmp = x1;
            x1 = x2;
            x2 = tmp;
            tmp = y1;
            y1 = y2;
            y2 = tmp;
        }
        for (var i = x1; i <= x2; i++) {
            x = i;
            y = (y2 - y1) / (x2 - x1) * (x - x1) + y1;
            a(x, y, color);
        }
    }
    //line(1,1,100,100,"000000");
    line(td1.offsetLeft, td1.offsetTop, td1.offsetLeft + td1.offsetWidth, td1.offsetTop + td1.offsetHeight, '#000000')
